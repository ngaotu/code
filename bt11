#include <iostream>
using namespace std;
void chuyendia(int n,int a,int b,int c){            // bai toan chuyen dia cot co ha noi

    if(n==1){
        cout<<"chuyen dia tu cot "<<a<<"sang cot "<<c<<endl;
    } else {
    chuyendia(n-1,a,c,b);
    chuyendia(1,a,b,c);
    chuyendia(n-1,b,a,c);
}}



int main ()
{
 int n;
 cout<<"nhap so dia can chuyen: ";
 cin>>n;
 chuyendia(n,1,2,3);
 

    return 0;
}
